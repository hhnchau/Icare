<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExpandableCardView">
        <attr name="children_view" format="reference" />
        <attr name="title" format="string" />
    </declare-styleable>

    <declare-styleable name="MyTextView">
        <attr name="label" format="string" />
        <attr name="value" format="string" />
    </declare-styleable>

    <declare-styleable name="MyButton">
        <attr name="text" format="string" />
        <attr name="textSize" format="integer" />
        <attr name="textColor" format="color" />
        <attr name="backgroundColor" format="integer" />
        <attr name="padding" format="integer" />
        <attr name="padding_Start" format="integer" />
        <attr name="padding_End" format="integer" />
        <attr name="padding_Top" format="integer" />
        <attr name="padding_Bottom" format="integer" />
    </declare-styleable>

    <declare-styleable name="MyInputText">
        <attr name="txt" format="string" />
        <attr name="hint" format="string" />
        <attr name="android:inputType"/>
    </declare-styleable>

</resources>