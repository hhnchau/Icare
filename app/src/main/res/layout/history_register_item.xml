<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_4"
        android:elevation="@dimen/dp_2"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <!--Header-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_weight="1">

            <ptt.vn.icaremobileapp.custom.MyTextView
                android:id="@+id/tvRegisterDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                app:label="@string/txt_register_date"
                android:layout_weight="0.3"/>

            <ptt.vn.icaremobileapp.custom.MyTextView
                android:id="@+id/tvRegisterCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                app:label="@string/txt_register_code"
                android:layout_weight="0.3"/>

            <ptt.vn.icaremobileapp.custom.MyTextView
                android:id="@+id/tvRegisterObject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                app:label="@string/txt_register_object"
                android:layout_weight="0.6"/>

            <ptt.vn.icaremobileapp.custom.MyTextView
                android:id="@+id/tvRegisterDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                app:label="@string/txt_discount"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ic_expand"
                android:layout_width="@dimen/ic_50"
                android:layout_height="@dimen/ic_50"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/img_des"
                android:src="@drawable/ic_arrow_drop_down" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!--Detail-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
