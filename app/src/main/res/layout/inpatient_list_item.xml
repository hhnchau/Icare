<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_20">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_4"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/dp_2"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16">

            <LinearLayout
                android:id="@+id/box1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_28"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/box2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ptt.vn.icaremobileapp.custom.MyTextView
                    android:id="@+id/tvCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:label="Mã Bệnh Nhân"
                    app:value="1234567809" />


                <ptt.vn.icaremobileapp.custom.MyTextView
                    android:id="@+id/tvBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    app:label="Ngày Sinh"
                    app:value="20/12/1988" />

                <ptt.vn.icaremobileapp.custom.MyTextView
                    android:id="@+id/tvRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:label="Số Phòng"
                    app:value="P.05" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/box2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginStart="@dimen/dp_56"
                android:layout_marginBottom="@dimen/dp_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/box1"
                app:layout_constraintTop_toTopOf="parent">

                <ptt.vn.icaremobileapp.custom.MyTextView
                    android:id="@+id/tvTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:label="Ngày Vào Khoa"
                    app:value="01/04/2019   " />


                <ptt.vn.icaremobileapp.custom.MyTextView
                    android:id="@+id/tvGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    app:label="Giới Tính"
                    app:value="Nam" />


                <ptt.vn.icaremobileapp.custom.MyTextView
                    android:id="@+id/tvBed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:label="Số Giường"
                    app:value="02" />


            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="@dimen/dp_4"
        android:elevation="@dimen/dp_8"
        app:layout_constraintBottom_toTopOf="@id/cv"
        app:layout_constraintEnd_toEndOf="@id/cv"
        app:layout_constraintStart_toStartOf="@id/cv"
        app:layout_constraintTop_toTopOf="@id/cv">

        <TextView
            android:id="@+id/edtHappening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:gravity="center"
            android:text="Nguyễn Văn BS"
            android:padding="@dimen/dp_12"
            android:textColor="@color/wh"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>

